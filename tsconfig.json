{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "removeComments": true,
    "strict": true,
    "downlevelIteration": true
  },
  "exclude": ["dist", "node_modules"],
  "include": ["src/*"]
}
